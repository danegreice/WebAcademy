<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To Do List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <form action="/update/{{lembrete.id}}" method="post" class="container">
      <div>
        <label for="titulo" class="form-label">Título</label>
        <input
          type="text"
          class="form-control form-control-lg"
          name="titulo"
          id="titulo"
          value="{{lembrete.titulo}}"
        />
      </div>
      <div>
        <label for="dataCadastro" class="form-label">Data cadastro</label>
        <input
          type="datetime-local"
          class="form-control form-control-lg"
          name="dataCadastro"
          id="dataCadastro"
          value="{{lembrete.dataCadastro}}"
        />
      </div>
      <div>
        <label for="dataLimite" class="form-label">Data limite</label>
        <input
          type="date"
          class="form-control form-control-lg"
          name="dataLimite"
          id="dataLimite"
          value="{{lembrete.dataLimite}}"
        />
      </div>
      <div>
        <legend class="form-label">Descrição</legend>
        <textarea
          name="descricao"
          class="form-control form-control-lg"
          id="descricao"
          cols="120"
          rows="10"
        >
          {{lembrete.descricao}}
        </textarea>
      </div>
      <div class="mt-3">
        <button type="submit" class="btn btn-success w-100">Cadastrar</button>
      </div>
    </form>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>