<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{turma.nome}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <div style="text-align: right;">
        <a href="/create" class="btn btn-primary" type="button">Novo aluno</a>
      </div>
      <h1>Turma {{turma.nome}}</h1>
      <table class="table table-striped" id="tabelaLembretes">
        <thead>
          <tr>
            <th scope="col">Nome</th>
            <th scope="col">Idade</th>
            <th scope="col">Altura (cm)</th>
            <th scope="col">Peso</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <tbody>
          {{#each turma.alunos}}
            <tr>
              <td>{{nome}}</td>
              <td>{{idade}}</td>
              <td>{{altura}}</td>
              <td>{{peso}}</td>
              <td>
                <a href="/update/{{id}}">edit</a>
                <a href="/remove/{{id}}">delete</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <div>
        <h1>Estatísticas: </h1>
        <h3> Número de alunos: {{qtdAlunos}}</h3>
        <h3> Média idades: {{mediaIdades}}</h3>
        <h3> Média alturas: {{mediaAlturas}}</h3>
        <h3> Média pesos: {{mediaPesos}}</h3>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>